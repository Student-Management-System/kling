{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2017", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@web-ide/client-auth": ["libs/client/feature/auth/src/index.ts"],
			"@web-ide/client-environments": ["libs/client/shared/environments/src/index.ts"],
			"@web-ide/client-shared": ["libs/client/feature/shared/src/index.ts"],
			"@web-ide/client/data-access/state": ["libs/client/data-access/state/src/index.ts"],
			"@web-ide/client/shared/components": ["libs/client/shared/components/src/index.ts"],
			"@web-ide/client/shared/services": ["libs/client/shared/services/src/index.ts"],
			"@web-ide/code-editor": ["libs/client/feature/code-editor/src/index.ts"],
			"@web-ide/collaboration": ["libs/client/feature/collaboration/src/index.ts"],
			"@web-ide/exercise-submitter": ["libs/client/feature/exercise-submitter/src/index.ts"],
			"@web-ide/file-tabs": ["libs/client/feature/file-tabs/src/index.ts"],
			"@web-ide/get-started": ["libs/client/feature/get-started/src/index.ts"],
			"@web-ide/ide": ["libs/client/feature/ide/src/index.ts"],
			"@web-ide/ide-dialogs": ["libs/client/feature/ide-dialogs/src/index.ts"],
			"@web-ide/ide-services": ["libs/client/feature/ide-services/src/index.ts"],
			"@web-ide/indexed-db": ["libs/client/data-access/indexed-db/src/index.ts"],
			"@web-ide/programming": ["libs/shared/util/programming/src/index.ts"],
			"@web-ide/shared/storybook": ["libs/shared/storybook/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
